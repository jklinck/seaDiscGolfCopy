<% @title_tag = "#{@user.first_name} #{@user.last_name} User Profile" %>
<% @body_id = "user-profile" %>

<% # Title tag %>
<% content_for :head do
  @title_tag
end %>

<% # Body tag ID %>
<% content_for :body_id do
  @body_id
end %>

<section>
  	<article>
		<div class="container narrow">
			<div class="row">
				<div class="col-md-12">
				  <h1><%= @user.first_name %> <%= @user.last_name %> User Profile</h1>
				</div>
			</div>

		  	<div class="row">
				<div class="col-md-3">
					<h3><strong>First Name:</strong</h3>
				</div>
			  	<div class="col-md-9">
				  	<h3><%= @user.first_name %></h3>
				</div>

				<div class="col-md-3">
					<h3><strong>Last Name:</strong</h3>
				</div>
			  	<div class="col-md-9">
				  	<h3><%= @user.last_name %></h3>
				</div>

				<div class="col-md-3">
					<h3><strong>Email:</strong</h3>
				</div>
			  	<div class="col-md-9">
				  	<h3><%= @user.email %></h3>
				</div>

			</div>

			<div class="row">
				<div class="col-md-12">
				  <h2><a href="/users/edit/<%= @user.id %>">Edit User Profile</a></h2>

				  <% if session[:user_id] && session[:user_type] == "admin" %>
				  	<h2><a href="/users">View All Users</a></h2>
				  <% end %>
				</div>
			</div>
		</div>
	</article>
</section>

