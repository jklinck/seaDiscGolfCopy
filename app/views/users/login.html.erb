<% @title_tag = "User Sign In" %>
<% @body_id = "user-login" %>

<% # Title tag %>
<% content_for :head do
  @title_tag
end %>

<% # Body tag ID %>
<% content_for :body_id do
  @body_id
end %>

<section>
  <article>

		<div class="container narrow">
		  <div class="row">
			<div class="col-md-12">
			  <h1>User Sign In</h1>
			  <% if flash[:notice] %>
		  		<p class="error"><%= flash[:notice] %>
		  	  <% end %>
			</div>
		  </div>

		  <div class="row">
			<form id="login-register-form" action="/users/login" method="post">
			  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

				  <div class="col-md-2">
					<label for="email">Email</label>
				  </div>
				  <div class="col-md-10">
					<input type="text" name="email" />
				  </div>

				  <div class="col-md-2">
					<label for="password">Password</label>
				  </div>
				  <div class="col-md-10">
					<input type="password" name="password" />
				  </div>

				  <div class="col-md-10 col-md-offset-2">
					<input type="submit" value="Sign In" />
				  </div>

			</form>
		  </div>

		  <div class="row">
			<div class="col-md-12">
			  <h2><a href="/users/new">New user? Register here!</a></h2>
			</div>
		  </div>

		</div>

	</article>
</section>